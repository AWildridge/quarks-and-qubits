---
import BaseLayout from '../layouts/BaseLayout.astro';
import cvData from '../data/cv.json';
---

<BaseLayout title="Contact" description="Get in touch with AJ Wildridge">
  <div class="max-w-3xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">Contact</h1>

    <div class="prose dark:prose-invert max-w-none">
      <p class="text-lg mb-8">
        I'm always interested in discussing research collaborations, speaking opportunities, or
        questions about my work in high-energy physics and quantum computing.
      </p>

      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4">Get in Touch</h2>

        <div class="space-y-4">
          <!-- Email (obfuscated) -->
          <div class="flex items-start gap-3">
            <svg
              class="w-6 h-6 mt-1 flex-shrink-0 text-blue-600 dark:text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <div>
              <h3 class="font-semibold mb-1">Email</h3>
              <p>
                <a
                  href="#"
                  id="email-link"
                  class="text-blue-600 dark:text-blue-400 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
                >
                  Click to reveal email
                </a>
              </p>
            </div>
          </div>

          <!-- GitHub -->
          <div class="flex items-start gap-3">
            <svg
              class="w-6 h-6 mt-1 flex-shrink-0 text-blue-600 dark:text-blue-400"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
            </svg>
            <div>
              <h3 class="font-semibold mb-1">GitHub</h3>
              <p>
                <a
                  href="https://github.com/AWildridge"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-600 dark:text-blue-400 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
                >
                  @AWildridge
                </a>
              </p>
            </div>
          </div>

          <!-- ORCID -->
          <div class="flex items-start gap-3">
            <svg
              class="w-6 h-6 mt-1 flex-shrink-0 text-blue-600 dark:text-blue-400"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.016-5.325 5.016h-3.919V7.416zm1.444 1.303v7.444h2.297c2.359 0 4.044-1.466 4.044-3.722 0-2.256-1.762-3.722-4.044-3.722h-2.297z"
              ></path>
            </svg>
            <div>
              <h3 class="font-semibold mb-1">ORCID</h3>
              <p>
                <a
                  href="https://orcid.org/0000-0002-1234-5678"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-600 dark:text-blue-400 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
                >
                  0000-0002-1234-5678
                </a>
              </p>
            </div>
          </div>

          <!-- arXiv -->
          <div class="flex items-start gap-3">
            <svg
              class="w-6 h-6 mt-1 flex-shrink-0 text-blue-600 dark:text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            <div>
              <h3 class="font-semibold mb-1">arXiv</h3>
              <p>
                <a
                  href="https://arxiv.org/search/?searchtype=author&query=Wildridge%2C+A"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-600 dark:text-blue-400 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
                >
                  Author search
                </a>
              </p>
            </div>
          </div>
        </div>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4">Press &amp; Media</h2>
        <p class="mb-4">
          Media professionals can find press materials including headshots, biography, and logos in
          the
          <a
            href="/press/"
            class="text-blue-600 dark:text-blue-400 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
          >
            press kit
          </a>.
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-bold mb-4">Office</h2>
        <address class="not-italic text-gray-700 dark:text-gray-300">
          CERN<br />
          Building 40<br />
          CH-1211 Geneva 23<br />
          Switzerland
        </address>
      </section>
    </div>
  </div>
</BaseLayout>

<script>
  // Email obfuscation - decode on click to prevent scraping
  document.addEventListener('DOMContentLoaded', () => {
    const emailLink = document.getElementById('email-link');
    if (emailLink) {
      // Obfuscated email (split to avoid scrapers)
      const user = 'aj';
      const domain = 'example.com';
      const email = `${user}@${domain}`;

      emailLink.addEventListener('click', (e) => {
        e.preventDefault();
        emailLink.href = `mailto:${email}`;
        emailLink.textContent = email;
        emailLink.removeEventListener('click', arguments.callee);
      });

      // Also reveal on focus (keyboard accessibility)
      emailLink.addEventListener('focus', () => {
        if (emailLink.textContent === 'Click to reveal email') {
          emailLink.href = `mailto:${email}`;
          emailLink.textContent = email;
        }
      });
    }
  });
</script>

<style>
  address {
    line-height: 1.8;
  }
</style>
