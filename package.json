{
  "name": "quarks-and-qubits",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Astro + MDX + Tailwind site with CI gates (build, lint, links, axe, Lighthouse, Playwright).",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:check": "astro check && astro build",
    "typecheck": "astro check",
    "preview": "astro preview",
    "ci:serve": "astro preview --host 127.0.0.1 --port 4321",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cspell": "cspell --no-progress --no-must-find-files --config cspell.json \"{src,public,scripts,tests}/**/*.{ts,tsx,js,jsx,astro,md,mdx,css,json,yml,yaml}\"",
    "html:validate": "html-validate --config .htmlvalidate.json \"dist/**/*.html\"",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "lighthouse": "lhci autorun",
    "prepare": "husky",
    "prebuild": "node scripts/extract-cv-from-docx.js && node scripts/validate-bibtex.js",
    "cv:extract": "node scripts/extract-cv-from-docx.js",
    "cv:generate": "node scripts/generate-content-from-cv.js",
    "cv:sync": "pnpm cv:extract && pnpm cv:generate"
  },
  "dependencies": {
    "@astrojs/mdx": "^3.1.0",
    "@astrojs/react": "^3.6.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^4.10.0",
    "katex": "^0.16.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@axe-core/cli": "^4.10.0",
    "@axe-core/puppeteer": "^4.10.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.49.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "astro-eslint-parser": "^1.0.3",
    "autoprefixer": "^10.4.20",
    "cspell": "^8.14.2",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^15.11.0",
    "html-validate": "^8.7.4",
    "husky": "^9.1.6",
    "lighthouse": "^12.1.0",
    "linkinator": "^6.1.2",
    "lint-staged": "^15.2.10",
    "mammoth": "^1.11.0",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "puppeteer": "^24.25.0",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,css,md,mdx,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix"
    ]
  }
}
